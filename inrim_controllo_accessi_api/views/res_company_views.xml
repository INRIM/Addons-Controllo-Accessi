<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_view_form_inherit" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page name="people" string="API People">
                    <group>
                        <group>
                            <field name="enable_people"/>
                            <field 
                                name="people_x_key"
                                password='True'
                                required='enable_people'
                                invisible='not enable_people'
                            />
                            <field 
                                name="people_url"
                                required='enable_people'
                                invisible='not enable_people'
                            />
                        </group>
                        <group>
                            <field
                                name="get_addressbook_path"
                                required='enable_people'
                                invisible='not enable_people'
                            />
                            <field
                                name="get_rooms_path"
                                required='enable_people'
                                invisible='not enable_people'
                            />
                        </group>
                    </group>
                </page>
                <page name="rfid" string="API RFID">
                    <group>
                        <group>
                            <field name="enable_rfid"/>
                            <field 
                                name="rfid_token_jwt"
                                password='True'
                                required='enable_rfid'
                                invisible='not enable_rfid'
                            />
                            <field 
                                name="rfid_url"
                                required='enable_rfid'
                                invisible='not enable_rfid'
                            />
                        </group>
                        <group>
                            <field
                                name="rfid_info_path"
                                required='enable_rfid'
                                invisible='not enable_rfid'
                            />
                            <field
                                name="rfid_status_path"
                                required='enable_rfid'
                                invisible='not enable_rfid'
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>