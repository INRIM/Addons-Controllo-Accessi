<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ca_tipo_doc_ident_view_tree" model="ir.ui.view">
        <field name="name">ca.tipo.doc.ident.view.tree</field>
        <field name="model">ca.tipo_doc_ident</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <record id="ca_codice_documento_view_tree" model="ir.ui.view">
        <field name="name">ca.codice.documento.view.tree</field>
        <field name="model">ca.codice_documento</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="ca_documento_search" model="ir.ui.view">
        <field name="name">ca.documento.view.search</field>
        <field name="model">ca.documento</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Valid Document" name="document_status_valid" domain="[('document_status', '=', 'valid')]"/>
                <filter string="Expiring Document" name="document_status_expiring" domain="[('document_status', '=', 'expiring')]"/>
                <filter string="Expired Document" name="document_status_expired" domain="[('document_status', '=', 'expired')]"/>
            </search>
        </field>
    </record>

    <record id="ca_documento_view_tree" model="ir.ui.view">
        <field name="name">ca.documento.view.tree</field>
        <field name="model">ca.documento</field>
        <field name="arch" type="xml">
            <tree 
                editable="bottom" 
                decoration-success="document_status == 'valid'"
                decoration-danger="document_status == 'expired'"
                decoration-primary="document_status == 'expiring'"
            >
                <field name="ca_persona_id"/>
                <field name="tipo_documento_id"/>
                <field name="validity_start_date"/>
                <field name="validity_end_date"/>
                <field name="image_ids" widget="many2many_binary"/>
                <field name="document_code_id"/>
                <field name="document_status" force_save="1"/>
            </tree>
        </field>
    </record>

    <record id="ca_tipo_doc_ident_action" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="res_model">ca.tipo_doc_ident</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="ca_codice_documento_action" model="ir.actions.act_window">
        <field name="name">Document Code</field>
        <field name="res_model">ca.codice_documento</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="ca_documento_action" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">ca.documento</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>