<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ca_registro_accesso_view_tree" model="ir.ui.view">
        <field name="name">ca.registro.accesso.view.tree</field>
        <field name="model">ca.registro_accesso</field>
        <field name="arch" type="xml">
            <tree>
                <field name="spazio_id"/>
            </tree>
        </field>
    </record>

    <record id="ca_registro_accesso_view_form" model="ir.ui.view">
        <field name="name">ca.registro.accesso.view.form</field>
        <field name="model">ca.registro_accesso</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="spazio_id" options="{'no_create': True}"/>
                    </group>
                    <field name="righe_accesso_ids">
                        <tree editable="bottom">
                            <field name="persona_id" options="{'no_create': True}"/>
                            <field name="spazio_id" options="{'no_create': True}"/>
                            <field name="tipo_spazio_id" options="{'no_create': True}"/>
                            <field name="tag_persona_id" options="{'no_create': True}"/>
                            <field name="datetime"/>
                            <field name="management"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ca_registro_accesso_action" model="ir.actions.act_window">
        <field name="name">Access Log</field>
        <field name="res_model">ca.registro_accesso</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>